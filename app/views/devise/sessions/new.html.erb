<div class="min-h-screen bg-white flex items-center justify-center p-4 fixed inset-0 z-10">
  <div class="w-full max-w-xl">
    <div class="bg-gray-50 rounded-lg shadow-2xl">
      <div class="p-12">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900">Welcome Back</h1>
          <p class="text-gray-500 mt-2">Sign in to your account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
          <div class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email", 
                  class: "w-full px-3 py-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "Enter your email" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
              <%= f.password_field :password, 
                  autocomplete: "current-password", 
                  class: "w-full px-3 py-3 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded mr-3" %>
                <label class="text-sm text-gray-700">Remember me</label>
              </div>
            <% end %>

            <div class="mt-8">
              <%= f.submit "Sign In", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
            </div>
          </div>
        <% end %>

        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-gray-50 text-gray-500">or</span>
          </div>
        </div>
        
        <div class="text-center space-y-2 space-x-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
