<div class="flex flex-col space-y-4">
  <div id="intro">
    <% if current_user.name.present? %>
      <h1>Welcome <%= current_user.display_name %></h1>
    <% else %>
      <p>Please enter your name:</p>
      <%= form_with url: add_user_name_path, method: :post do |form| %>
        <%= form.text_field :name, class: "block bg-gray-100 py-2 my-2" %>
        <%= form.submit "Submit" %>
      <% end %>
    <% end %>
  </div>
  <div id="my_chat_rooms">
    <% if current_user.chat_rooms.present? %>
      <h2>My Chat Rooms:</h2>
      <% current_user.chat_rooms.each do |chat_room| %>
        <%= render chat_room %>
      <% end %>
    <% end %>
  </div>
</div>